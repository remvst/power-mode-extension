{
  "manifest_version": 3,
  "name": "Power Mode",
  "version": "1.0.0",
  "description": "Power Mode browser extension",
  "permissions": ["sidePanel", "storage"],
  "action": {
    "default_title": "Open Power Mode"
  },
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script/content.js"],
      "css": ["content-script/content.css"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "sidebar_action": {
    "default_panel": "sidepanel/sidepanel.html",
    "default_title": "Power Mode"
  }
}
